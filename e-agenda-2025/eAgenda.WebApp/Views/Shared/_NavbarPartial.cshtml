﻿@{
    var rotaContatosAtiva = ViewContext.HttpContext.Request.Path.StartsWithSegments("/contatos") ? "btn btn-primary px-3" : "nav-link text-primary fw-semibold";
    var rotaCompromissosAtiva = ViewContext.HttpContext.Request.Path.StartsWithSegments("/compromissos") ? "btn btn-primary px-3" : "nav-link text-primary fw-semibold";
    var rotaCategoriasAtiva = ViewContext.HttpContext.Request.Path.StartsWithSegments("/categorias") ? "btn btn-primary px-3" : "nav-link text-primary fw-semibold";
    var rotaDespesasAtiva = ViewContext.HttpContext.Request.Path.StartsWithSegments("/despesas") ? "btn btn-primary px-3" : "nav-link text-primary fw-semibold";
    var rotaTarefasAtiva = ViewContext.HttpContext.Request.Path.StartsWithSegments("/tarefas") ? "btn btn-primary px-3" : "nav-link text-primary fw-semibold";
}

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container">
        <a class="navbar-brand fs-4 fw-bold" href="/">e-Agenda</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">

            @if (User.Identity is not null && User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav gap-2 ms-auto">
                    <li class="nav-item">
                        <a class="@rotaContatosAtiva" href="/contatos">Contatos</a>
                    </li>
                    <li class="nav-item">
                        <a class="@rotaCompromissosAtiva" href="/compromissos">Compromissos</a>
                    </li>
                    <li class="nav-item">
                        <a class="@rotaCategoriasAtiva" href="/categorias">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="@rotaDespesasAtiva" href="/despesas">Despesas</a>
                    </li>
                    <li class="nav-item">
                        <a class="@rotaTarefasAtiva" href="/tarefas">Tarefas</a>
                    </li>
                </ul>

                <div class="dropdown ms-5">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                        @User.Identity?.Name
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <form asp-controller="Autenticacao" asp-action="Logout" method="post">
                                <button class="dropdown-item" type="submit">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </div>
</nav>