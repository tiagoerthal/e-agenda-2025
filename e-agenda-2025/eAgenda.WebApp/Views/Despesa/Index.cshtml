@model VisualizarDespesasViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Despesas";
}

<p>
    <a class="btn btn-primary px-4" href="/despesas/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <h5 class="card-title">@item.Descricao</h5>
                    <p class="card-text mb-0"><span class="fw-semibold">Data de Ocorrência:</span> @item.DataOcorrencia.ToShortDateString()</p>
                    <p class="card-text mb-0"><span class="fw-semibold">Categorias:</span> @string.Join(", ", item.Categorias)</p>
                    <p class="card-text"><span class="fw-semibold">Valor:</span> @item.Valor.ToString("C2")</p>


                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/despesas/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/despesas/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>