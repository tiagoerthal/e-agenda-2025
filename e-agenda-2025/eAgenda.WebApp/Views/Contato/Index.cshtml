@model VisualizarContatosViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Contatos";
}

<p>
    <a class="btn btn-primary px-4" href="/contatos/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0" style="min-height: 210px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Nome</h5>
                    <p class="card-text mb-0"><span class="fw-semibold">Telefone:</span> @item.Telefone</p>
                    <p class="card-text mb-0"><span class="fw-semibold">Email:</span> @item.Email</p>

                    @if (!string.IsNullOrWhiteSpace(item.Empresa))
                    {
                        <p class="card-text mb-0"><span class="fw-semibold">Empresa:</span> @item.Empresa</p>
                        <p class="card-text mb-0"><span class="fw-semibold">Cargo:</span> @item.Cargo</p>
                    }

                    <span class="d-flex gap-1 justify-content-end mt-auto">
                        <a href="/contatos/detalhes/@item.Id" class="btn btn-secondary rounded-circle opcao-card">
                            <i class="bi bi-search"></i>
                        </a>
                        <a href="/contatos/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/contatos/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>