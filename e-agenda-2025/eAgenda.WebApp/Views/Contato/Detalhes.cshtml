@model DetalhesContatoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Detalhes do Contato";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Nome" class="control-label fs-5">Nome:</label>
                    <input name="Nome" class="form-control" value="@Model.Nome" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Telefone" class="control-label fs-5">Telefone:</label>
                    <input name="Telefone" class="form-control" value="@Model.Telefone" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Email" class="control-label fs-5">Email:</label>
                    <input name="Email" class="form-control" value="@Model.Email" readonly disabled />
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Empresa))
                {
                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Empresa" class="control-label fs-5">Empresa:</label>
                        <input name="Empresa" class="form-control" value="@Model.Empresa" readonly disabled />
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label for="Cargo" class="control-label fs-5">Cargo:</label>
                        <input name="Cargo" class="form-control" value="@Model.Cargo" readonly disabled />
                    </div>
                }

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a href="/contatos">Voltar para a listagem</a>
                </div>
            </div>
        </div>

    </div>
</div>